{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build all",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=gnu++14",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "main.cpp",
                "game.cpp",
                "board.cpp",
                "player.cpp",
                "-o",
                "main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds all source files for Connect-4."
        }
    ],
    "version": "2.0.0"
}